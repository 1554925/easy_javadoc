<idea-plugin>
    <id>com.star.easydoc.easy-kdoc</id>
    <name>Easy Kdoc</name>
    <vendor email="wangchao.star@gmail.com" url="https://github.com/starcwang">wangchao</vendor>

    <description><![CDATA[
      This plugin can help you complete the Chinese kdoc document quickly.<br>
      Support three type of kdoc: field, method and class.<br>
      <a href="https://github.com/starcwang/easy_javadoc">easy_javadoc source code and document</a><br>
      <img src="https://raw.githubusercontent.com/starcwang/easy_javadoc/master/doc/k03vffH6Hg.gif" /><br>
      <p>
        能帮助开发者快速生成类、方法、属性等中文kdoc
      </p>
    ]]></description>

    <change-notes><![CDATA[

      <h3>v1.0 first version</h3>
      <ul>
          <li>support class, method and field kdoc</li>
      </ul>
      <a href="https://github.com/starcwang/easy_javadoc">easy_javadoc source code and document</a><br>
    ]]>
    </change-notes>
    
    <idea-version since-build="181"/>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationService serviceImplementation="com.star.easydoc.kdoc.config.EasyKdocConfigComponent" order="first"/>
        <applicationService serviceImplementation="com.star.easydoc.kdoc.service.DocGeneratorService"/>
        <applicationService serviceImplementation="com.star.easydoc.service.WriterService"/>
        <applicationService serviceImplementation="com.star.easydoc.service.translator.TranslatorService"/>
        <applicationService serviceImplementation="com.star.easydoc.kdoc.service.variable.VariableGeneratorService"/>
        <applicationConfigurable displayName="EasyKdoc" instance="com.star.easydoc.kdoc.view.CommonConfigurable">
            <configurable instance="com.star.easydoc.kdoc.view.template.ClassConfigurable"/>
            <configurable instance="com.star.easydoc.kdoc.view.template.MethodConfigurable"/>
            <configurable instance="com.star.easydoc.kdoc.view.template.FieldConfigurable"/>
        </applicationConfigurable>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="com.star.kdoc" text="EasyKdoc" description="EasyKdoc" popup="true">
            <separator/>
            <group id="EasyKdocSubGroup"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action id="kdoc.generator" class="com.star.easydoc.kdoc.action.GenerateKdocAction" text="GenerateJavadoc"
                    description="GenerateKdoc">
                <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta BACK_SLASH"/>
                <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="meta BACK_SLASH"/>
                <keyboard-shortcut keymap="Default for XWin" first-keystroke="ctrl BACK_SLASH"/>
                <keyboard-shortcut keymap="$default" first-keystroke="meta BACK_SLASH"/>
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl BACK_SLASH"/>
            </action>
        </group>
        <action id="kdoc.generatorAll" class="com.star.easydoc.kdoc.action.GenerateAllJavadocAction" text="生成文档注释">
            <add-to-group group-id="JavaGenerateGroup1" anchor="before" relative-to-action="GenerateEquals"/>
            <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta shift BACK_SLASH"/>
            <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="meta shift BACK_SLASH"/>
            <keyboard-shortcut keymap="Default for XWin" first-keystroke="ctrl shift BACK_SLASH"/>
            <keyboard-shortcut keymap="$default" first-keystroke="meta shift BACK_SLASH"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift BACK_SLASH"/>
        </action>
    </actions>

    <depends>com.intellij.modules.java</depends>
    <depends>org.jetbrains.kotlin</depends>
</idea-plugin>